# ReturnFlow Voice Agent - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# ==============================================================================
# VOICE & SPEECH APIs
# ==============================================================================

# VocalBridge AI (Primary voice platform)
VOCALBRIDGE_API_KEY=your_vocalbridge_api_key_here
VOCALBRIDGE_ENDPOINT=https://api.vocalbridge.ai/v1

# Alternative Speech-to-Text Options
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Text-to-Speech
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here
AWS_POLLY_REGION=us-east-1

# ==============================================================================
# CARRIER APIs (Shipping Labels & Tracking)
# ==============================================================================

# UPS
UPS_API_KEY=your_ups_api_key_here
UPS_CLIENT_ID=your_ups_client_id_here
UPS_CLIENT_SECRET=your_ups_client_secret_here
UPS_ACCOUNT_NUMBER=your_ups_account_number_here

# USPS
USPS_USER_ID=your_usps_user_id_here
USPS_PASSWORD=your_usps_password_here

# FedEx
FEDEX_API_KEY=your_fedex_api_key_here
FEDEX_SECRET_KEY=your_fedex_secret_key_here
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number_here

# ==============================================================================
# PAYMENT PROCESSING
# ==============================================================================

# Stripe
STRIPE_API_KEY=your_stripe_api_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox  # or 'live'

# ==============================================================================
# NOTIFICATIONS
# ==============================================================================

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_BUSINESS_ID=your_whatsapp_business_id_here
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourcompany.com

# ==============================================================================
# DATABASE
# ==============================================================================

# PostgreSQL (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/returnflow
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=returnflow
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Redis (for session storage)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# Security
SECRET_KEY=your_secret_key_for_sessions_here
JWT_SECRET=your_jwt_secret_for_auth_here

# Return Policy Settings
DEFAULT_RETURN_WINDOW_DAYS=30
FRAUD_RISK_THRESHOLD=0.7

# ==============================================================================
# EXTERNAL SERVICES
# ==============================================================================

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token_here

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here

# ==============================================================================
# DEVELOPMENT/TESTING
# ==============================================================================

# Mock Mode (set to true to use mock APIs instead of real ones)
USE_MOCK_APIS=true
USE_MOCK_DATABASE=true
USE_MOCK_CARRIERS=true

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/returnflow.log

# ==============================================================================
# NOTES
# ==============================================================================
#
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual API keys and credentials
# 3. Never commit .env to git (it's in .gitignore)
# 4. For production, use environment variables or secrets management
# 5. Set USE_MOCK_APIS=true for development without real API keys
